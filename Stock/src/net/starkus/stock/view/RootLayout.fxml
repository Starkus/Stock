<AnchorPane styleClass="background" xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.starkus.stock.view.RootLayoutController">
	<children>
		<BorderPane AnchorPane.bottomAnchor="0.0"
			AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
			AnchorPane.topAnchor="0.0">
			<center>
				<TabPane prefWidth="1200" HBox.hgrow="SOMETIMES"
					tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
					<tabs>
						<Tab fx:id="sellTab" text="%tab.sell">
							<content>
								<AnchorPane />
							</content>
						</Tab>
						<Tab fx:id="manageTab" text="%tab.manage">
							<content>
								<AnchorPane />
							</content>
						</Tab>
						<Tab fx:id="clientsTab" text="Clientes">
							<content>
								<AnchorPane />
							</content>
						</Tab>
					</tabs>
				</TabPane>
			</center>
		</BorderPane>
		<HBox fx:id="adminButtonBox" AnchorPane.rightAnchor="32.0"
			AnchorPane.topAnchor="32.0" spacing="12" alignment="CENTER_RIGHT">
			<children>
				<Label text="Admin mode:" />
				<AnimatedToggleButton fx:id="adminButton"
					mnemonicParsing="false" prefHeight="25.0" prefWidth="70.0" />
			</children>
		</HBox>
	</children>
</AnchorPane>
